@model  DMSTask.Command.Response.ItemResponse

@{
    ViewBag.Title = "GetItem";
}
<div>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <h4 id="ItemHeader">Item Details</h4>
    <div>
        <div class="col-lg-6">
            <div class="thumbnail">
                <img id="itemImg" class="img-rounded" src="@Model.Image" />
                <div class="caption">
                    <span><h3 style="display:inline">Name</h3> : <p style="font-size:12px;color:brown;display:inline">@Model.Name</p> </span> <br />
                    <span><h3 style="display:inline">IDescription</h3> :<p style="font-size:12px;color:brown;display:inline">  @Model.Description</p></span> <br />
                    <span><h3 style="display:inline">Price</h3> : <p style="font-size:12px;color:brown;display:inline"> @Model.Price LE</p></span> <br />
                    <span><h3 style="display:inline">Avaiable Quntity</h3> : <p style="font-size:12px;color:brown;display:inline"> @Model.Qty</p></span>

                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="thumbnail">
                @if (ViewBag.GetTax != null || ViewBag.Discount != null)
                {
                    <span><h3 style="display:inline">Tax</h3> : <p style="font-size:12px;color:brown;display:inline">@ViewBag.GetTax</p> </span> <br />
                    <span><h3 style="display:inline">Discount</h3> : <p style="font-size:12px;color:brown;display:inline">@ViewBag.GetDiscount</p> </span> <br />
                }
                else
                {
                    <span><h3 style="display:inline">Tax</h3> : <p style="font-size:12px;color:brown;display:inline">.....</p> </span> <br />
                    <span><h3 style="display:inline">Discount</h3> : <p style="font-size:12px;color:brown;display:inline">......</p> </span> <br />
                }

            </div>
        </div>
        <div>
            <span><h3 style="display:inline">Quantity</h3>:  <input type="number" id="qut" name="quantity" min="1" max="@Model.Qty" style="width:100%"> </span>
        </div>
        <div class="col-lg-6">
                <p style="text-align:center;padding-top:10px;"><a class="btn btn-success"  onclick="AddToCart(@Model.Id,@Model.Price,@ViewBag.GetTax,@ViewBag.GetDiscount)" role="button">AddToCart</a>
        </div>

    </div>


        </div>
<div>
    @Scripts.Render("~/Scripts/ManageShop.js")
</div>

