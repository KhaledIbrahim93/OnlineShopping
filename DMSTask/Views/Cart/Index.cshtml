@model IEnumerable<Dictionary<DMSTask.Command.Response.ItemResponse,int>>

@{
    ViewBag.Title = "Index";
}
    <div>
        <link href="~/Content/Site.css" rel="stylesheet" />
        <h4 id="ItemHeader">Items In Cart</h4>
        @*<p style="text-align:center;"><input type="button" onclick="" class="btn-info" value="View Order"  /></p>*@
        <p style="text-align:center"> @Html.ActionLink("Buy Now", "AddOrder", "Cart",new {@customerId=1 }, new { @class = "btn btn-danger" ,@style="color: #fff; background-color: #0d69da; border-color: #4f46da; font-size: 19px; border-radius: 16px;" })</p>
        @foreach (var x in Model)
        {
            foreach (var item in x.Keys)
            {
                foreach (var id in x.Values)
                {
                    <div id="cartContent">
                        <div class="col-lg-4">
                            <div class="thumbnail">
                                <img id="itemImg" class="img-rounded" src="@item.Image" />
                                <div class="caption">
                                    <span><h3 style="display:inline">Name</h3> : <p style="font-size:12px;color:brown;display:inline">@item.Name</p> </span> <br />
                                    <span><h3 style="display:inline">IDescription</h3> :<p style="font-size:12px;color:brown;display:inline">  @item.Description</p></span> <br />
                                    <span><h3 style="display:inline">Price</h3> : <p style="font-size:12px;color:brown;display:inline"> @item.Price LE</p></span>

                                    <p style="text-align:center"> @Html.ActionLink("Delete", "DeleteItemFromCart", "Cart", new { @id = id }, new { @class = "btn btn-danger" })</p>

                                </div>
                            </div>
                        </div>
                    </div>
                }
                break;
            }
            break;
        }
    </div>
