@model IEnumerable<DMSTask.Command.Response.ItemResponse>

@{
    ViewBag.Title = "Index";
}
    <div>
        <link href="~/Content/Site.css" rel="stylesheet" />
        <h4 id="ItemHeader">Items</h4>
        @foreach (var item in Model)
        {
            <div id="cartContent">
                <div class="col-lg-4">
                    <div class="thumbnail">
                        <img id="itemImg" class="img-rounded" src="@item.Image" />
                        <div class="caption">
                            <span><h3 style="display:inline">Name</h3> : <p style="font-size:12px;color:brown;display:inline">@item.Name</p> </span> <br />
                            <span><h3 style="display:inline">IDescription</h3> :<p style="font-size:12px;color:brown;display:inline">  @item.Description</p></span> <br />
                            <span><h3 style="display:inline">Price</h3> : <p style="font-size:12px;color:brown;display:inline"> @item.Price LE</p></span>
                            <p style="text-align:center;padding-top:10px; "> @Html.ActionLink("Deatails", "GetItem", "Items", new { @id = item.Id }, new { @class = "btn btn-primary" })</p>
                            @*<p style="text-align:center;padding-top:10px; "><a class="btn btn-primary" onclick="ItemDetails(@item.Id)" role="button">Deatails</a>*@
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
<div>
    @Scripts.Render("~/Scripts/ManageShop.js")
</div>

